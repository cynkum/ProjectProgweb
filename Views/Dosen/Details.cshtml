@model SampleASPCore.Models.Dosen;
@{
    Layout = "_Layout";
}

<h2>Detail Mahasiswa</h2><br/>
<a asp-action="Index" class="btn btn-success btn-xs">Tampil Data</a>
<div class="row">
@if(ViewData["pesan"]!=null){
    @Html.Raw(ViewData["pesan"])
}
<br/><br/>
</div>
<div class="col-md-6">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"/>
        <div class="form-group">
            <label asp-for="Nik" class="control-label">Nik</label>
            <input asp-for="Nik" readonly="readonly" class="form-control" />
            <span asp-validation-for="Nik" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Nama" class="control-label">Nama</label>
            <input asp-for="Nama" type="text" class="form-control" />
            <span asp-validation-for="Nama" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Alamat" class="control-label">Alamat</label>
            <input asp-for="Alamat" type="text" class="form-control" />
            <span asp-validation-for="Alamat" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Jurusan" class="control-label">Jurusan</label>
            <input asp-for="Jurusan" type="text" class="form-control" />
            <span asp-validation-for="Jurusan" class="text-danger"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn-btn-primary"/>
        </div>
    </form>
</div>  
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}